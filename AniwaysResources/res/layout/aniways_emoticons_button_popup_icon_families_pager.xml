<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal" >
    
    <com.aniways.viewpagerindicator.CirclePageIndicator
        android:id="@+id/aniways_ebp_icon_families_pager_indicator"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:padding="4dip"
        app:snap="false" />

    <aniways.android.support.v4.view.AniwaysVerticalViewPager
        android:id="@+id/aniways_ebp_icon_families_pager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_weight="1"
        android:layout_gravity="center" />

</LinearLayout>