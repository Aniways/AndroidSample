<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:paddingRight="5dp"
	android:paddingLeft="5dp"
    android:background="@color/aniways_transparent"
    android:clickable="true"
    android:gravity="center_vertical|center_horizontal" >

    <!-- The width and height values are not really respected. The value is taken from the configured iconInSuggestionPopupSize -->
    <ImageView
        android:id="@+id/aniways_action_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/aniways_ebp_emoticons_item_locked_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/aniways_locked_icon" />

</FrameLayout>